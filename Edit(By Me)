javascript:(function() {    var text = prompt("Enter text:");    if (text !== null) {        var containerDiv = document.createElement("div");        containerDiv.style.position = "fixed";        containerDiv.style.top = "0";        containerDiv.style.left = "0";        containerDiv.style.width = "100%";        containerDiv.style.height = "100%";        containerDiv.style.zIndex = "9999";        var editableDiv = document.createElement("div");        editableDiv.contentEditable = true;        editableDiv.style.width = "100%";        editableDiv.style.height = "100%";        editableDiv.style.backgroundColor = "#000"; /* Dark mode background color */        editableDiv.style.color = "#fff"; /* White text color */        editableDiv.style.position = "absolute";        editableDiv.style.top = "0";        editableDiv.style.left = "0";        editableDiv.style.padding = "20px";        editableDiv.style.textIndent = "20px"; /* Add an indent */        editableDiv.textContent = text;        var deleteButton = document.createElement("button");        deleteButton.textContent = "Delete All";        deleteButton.style.position = "absolute";        deleteButton.style.top = "10px";        deleteButton.style.right = "10px"; /* Right corner positioning */        deleteButton.style.padding = "5px 10px";        deleteButton.style.backgroundColor = "#ff0000"; /* Red delete button */        deleteButton.style.color = "#fff";        deleteButton.style.border = "none";        deleteButton.style.cursor = "pointer";        deleteButton.addEventListener("click", function() {            editableDiv.textContent = "";            editableDiv.style.textIndent = "0"; /* Reset the text indent to 0 */        });        var indentButton = document.createElement("button");        indentButton.textContent = "Indent";        indentButton.style.position = "absolute";        indentButton.style.top = "10px";        indentButton.style.right = "90px"; /* Right corner positioning */        indentButton.style.padding = "5px 10px";        indentButton.style.backgroundColor = "#007acc"; /* Blue indent button */        indentButton.style.color = "#fff";        indentButton.style.border = "none";        indentButton.style.cursor = "pointer";        indentButton.addEventListener("click", function() {            var currentIndent = parseInt(editableDiv.style.textIndent) || 0;            editableDiv.style.textIndent = (currentIndent + 20) + "px";        });        var darkModeButton = document.createElement("button");        darkModeButton.textContent = "Dark Mode";        darkModeButton.style.position = "absolute";        darkModeButton.style.top = "10px";        darkModeButton.style.right = "170px"; /* Right corner positioning */        darkModeButton.style.padding = "5px 10px";        darkModeButton.style.backgroundColor = "#333"; /* Dark mode toggle button */        darkModeButton.style.color = "#fff";        darkModeButton.style.border = "none";        darkModeButton.style.cursor = "pointer";        darkModeButton.addEventListener("click", function() {            if (editableDiv.style.backgroundColor === "rgb(0, 0, 0)") {                editableDiv.style.backgroundColor = "#fff";                editableDiv.style.color = "#000";            } else {                editableDiv.style.backgroundColor = "#000";                editableDiv.style.color = "#fff";            }        });        containerDiv.appendChild(editableDiv);        containerDiv.appendChild(deleteButton);        containerDiv.appendChild(indentButton);        containerDiv.appendChild(darkModeButton);        document.body.appendChild(containerDiv);    }})();
